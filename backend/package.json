{
  "name": "graphene-backend",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "description": "Generate beautiful code snippet using Shiki",
  "author": "elianiva <dicha.arkana03@gmail.com>",
  "main": "index.js",
  "scripts": {
    "start": "node -r dotenv/config --unhandled-rejections=strict dist/index.js",
    "dev:start": "node --experimental-loader esbuild-node-loader -r dotenv/config src/index.ts",
    "dev": "nodemon -e ts --watch src --exec \"npm run dev:start\"",
    "prettier": "prettier --write --ignore-path ../.gitignore .",
    "lint:check": "eslint --ignore-path ../.gitignore .",
    "lint": "eslint --fix --ignore-path ../.gitignore .",
    "test": "NODE_ENV=test c8 --include=src --reporter=text --reporter=lcovonly node --experimental-loader esbuild-node-loader ../node_modules/uvu/bin.js tests",
    "build": "tsc --noEmit && node build.js"
  },
  "dependencies": {
    "@logtail/node": "0.1.10",
    "@sentry/node": "6.15.0",
    "@tinyhttp/proxy-addr": "2.0.3",
    "dotenv": "16.0.0",
    "flourite": "1.2.2",
    "gura": "1.4.4",
    "helmet": "5.0.2",
    "polka": "1.0.0-next.22",
    "rate-limiter-flexible": "2.3.6",
    "sharp": "0.29.3",
    "shiki": "0.10.1",
    "sirv": "2.0.2",
    "toml": "3.0.0",
    "yaml": "1.10.2"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@types/sharp": "0.29.5",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "c8": "7.11.0",
    "esbuild": "0.14.23",
    "esbuild-node-loader": "0.6.5",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "supertest": "6.2.2",
    "tslib": "2.3.1",
    "typescript": "4.6.2",
    "uvu": "0.5.3",
    "yup": "^0.32.11"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.1.0"
  }
}
