{
  "compilerOptions": {
    "strict": true,
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
