{
  "name": "graphene-backend",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "description": "Generate beautiful code snippet using Shiki",
  "author": "elianiva <dicha.arkana03@gmail.com>",
  "main": "index.js",
  "scripts": {
    "start": "esno -r dotenv/config src/index.ts",
    "dev": "esno watch -r dotenv/config src/index.ts",
    "fmt:write": "prettier --write --ignore-path ../../.gitignore .",
    "fmt:check": "prettier --check --ignore-path ../../.gitignore .",
    "lint": "eslint --ignore-path ../../.gitignore .",
    "lint:fix": "eslint --fix --ignore-path ../../.gitignore .",
    "test": "vitest run",
    "test:watch": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@logtail/node": "0.1.12",
    "@sentry/node": "^7.15.0",
    "@sentry/tracing": "^7.15.0",
    "@tinyhttp/proxy-addr": "2.0.5",
    "dotenv": "16.0.3",
    "flourite": "1.2.2",
    "gura": "1.4.4",
    "helmet": "6.0.0",
    "polka": "1.0.0-next.22",
    "rate-limiter-flexible": "2.3.12",
    "shared": "link:../shared",
    "sharp": "0.31.1",
    "shiki": "0.11.1",
    "sirv": "2.0.2",
    "toml": "3.0.0",
    "yaml": "2.1.3",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@logtail/types": "^0.1.12",
    "@types/node": "18.11.0",
    "@types/sharp": "0.31.0",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.40.0",
    "@typescript-eslint/parser": "5.40.0",
    "@vitest/coverage-c8": "^0.24.3",
    "c8": "^7.12.0",
    "esbuild": "0.15.11",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "esno": "^0.16.3",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "supertest": "6.3.0",
    "tslib": "2.4.0",
    "typescript": "4.8.4",
    "vitest": "^0.24.3"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=18.6.0"
  }
}
