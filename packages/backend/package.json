{
  "name": "graphene-backend",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "description": "Generate beautiful code snippet using Shiki",
  "author": "elianiva <dicha.arkana03@gmail.com>",
  "main": "index.js",
  "scripts": {
    "start": "esno -r dotenv/config src/index.ts",
    "dev": "esno watch -r dotenv/config src/index.ts",
    "fmt:write": "prettier --write --ignore-path ../../.gitignore .",
    "fmt:check": "prettier --check --ignore-path ../../.gitignore .",
    "lint": "eslint --ignore-path ../../.gitignore .",
    "lint:fix": "eslint --fix --ignore-path ../../.gitignore .",
    "test": "vitest run",
    "test:watch": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@logtail/node": "0.4.0",
    "@sentry/node": "^7.91.0",
    "@sentry/tracing": "^7.91.0",
    "@tinyhttp/proxy-addr": "2.1.0",
    "dotenv": "16.0.3",
    "flourite": "1.2.3",
    "gura": "1.4.4",
    "helmet": "5.1.1",
    "polka": "1.0.0-next.22",
    "rate-limiter-flexible": "2.4.1",
    "shared": "link:../shared",
    "sharp": "0.32.1",
    "shikiji": "^0.9.14",
    "sirv": "2.0.3",
    "toml": "3.0.0",
    "yaml": "2.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@logtail/types": "^0.4.14",
    "@types/node": "18.16.16",
    "@types/sharp": "0.31.1",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@typescript-eslint/parser": "5.59.7",
    "@vitest/coverage-c8": "^0.33.0",
    "c8": "^8.0.1",
    "esbuild": "0.17.19",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "esno": "^4.0.0",
    "prettier": "2.8.8",
    "supertest": "6.3.3",
    "tslib": "2.5.2",
    "typescript": "4.9.5",
    "vitest": "^1.1.0"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=18.6.0"
  }
}
